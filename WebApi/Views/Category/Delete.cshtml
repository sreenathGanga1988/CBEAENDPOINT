@model DTO.CategoryDTO

@{
    ViewData["Title"] = "Delete";
}

    <h2 class="form-heading">Delete Category</h2>
<hr />

<form asp-action="Delete">
    <partial name="/Views/Shared/_ErrorBox.cshtml" />

    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label id="lbl_Id" class="control-label">Id</label>
        </div>
        <div class=" col-4">
            <input id="Id" name="Id" v-model="dataModel.id" class="form-control" type="number" required disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="Name" id="lbl_Name" class="control-label">Category Name</label>
        </div>
        <div class=" col-4">
            <input id="Name" name="Name" v-model="dataModel.name" type="text" required class="form-control" disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="Abbreviation" id="lbl_Abbreviation" class="control-label">Code</label>
        </div>
        <div class=" col-4">
            <input id="Abbreviation" name="Abbreviation" v-model="dataModel.abbreviation" type="text" class="form-control" disabled />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="form-group form-check col-4">


            <input type="checkbox" id="IsActive" name="IsActive" v-model="dataModel.isActive" disabled>
            <label for="checkbox">Active ??</label>


        </div>
        <div class="form-group form-check col-4">


            <input type="checkbox" id="IsDeleted" name="IsDeleted" v-model="dataModel.isDeleted" disabled>
            <label for="checkbox">Deleted ??</label>


        </div>

    </div>


    <hr />

    <div class="row justify-content-center">

        <div class=" col-sm-12 text-center">

            <input type="submit" v-on:click="checkForm" value="Delete" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger btn-md center-block"> Cancel </a>
        </div>


    </div>
    <partial name="/Views/Shared/_AuditView.cshtml" />
</form>


<div>
    <a asp-action="Index" class="BacktoList"> &laquo; Back to List</a>
</div>
@section Scripts {
    <script type="text/javascript">

        var pageMixin = {
            created() {
                this.dataModel = @Json.Serialize(Model);
            },
            data: {
                dataModel: null,
                errors: [],
                function() {
                    return {
                        appMessage: 'Category',
                    };
                }
            },
            methods: {
                 checkForm: function (e) {
                    this.errors = [];
                    
                    if (!this.errors.length) {
                        return true;
                    }
                    e.preventDefault();
                }  , 
            }
        };

        mixinArray.push(pageMixin);
    </script>
}
