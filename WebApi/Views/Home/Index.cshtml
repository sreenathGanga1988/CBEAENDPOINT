@{
    ViewData["Title"] = "Canara bank employee golden jubilee program";
}
<link href="~/css/Homepage.css" rel="stylesheet" asp-append-version="true" />


<div class="img largescreen">
    <img class="img-fluid mx-auto d-block" src="~/images/headinglogo1.jpg" alt="Canara Bank Employees' Union Golden Jubilee Death Relief And Welfare Fund Scheme">
</div>

<div class="img smallscreen">
    <img class="img-fluid mx-auto d-block" src="~/images/headinglogo1.jpg" alt="Canara Bank Employees' Union Golden Jubilee Death Relief And Welfare Fund Scheme">
</div>

<div class="container-fluid container-fluid-slide">
    <div id="myCarousel" class="carousel slide">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li class="item1 active"></li>
            <li class="item2"></li>
            <li class="item3"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner ">
            <div class="carousel-item  active">
                <img class="img-fluid mbr-section-full" src="@Model.CorouselImage1" alt="Los Angeles" style="width:100%;">
            </div>
            <div class="carousel-item">
                <img class="img-fluid  mbr-section-full" src="@Model.CorouselImage2" alt="Chicago" style="width:100%;">
            </div>
            <div class="carousel-item">
                <img class="img-fluid  mbr-section-full" src="@Model.CorouselImage3" alt="New York" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#myCarousel">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#myCarousel">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>

<div class="container-fluid">
    <section>
        <marquee scrollamount="10" style="font-family: Verdana, Arial, Helvetica;
        font-size: 18px;
        font-style: normal;
        font-weight: bold;
        color: #990066;
">@Model.Slogan</marquee>

</section>
<section>
    <marquee scrollamount="5" style=" font-family: Verdana, Arial, Helvetica;
        font-size: 15px;
        font-style: normal;
        font-weight: bold;
        color: #ffff;
        background-color: #2e618c;
    ">@Model.DayQuote</marquee>

</section>
<section>
    <div id="maincontainer" class="parent">



        <div id="two" class="child1 main-text">

            <div class="margin-maintext">
                @Html.Raw(Model.MainText)
            </div>
        </div>

        <div id="one" class="child news">

            <h3 class="news-heading">News Update</h3>
            <hr />
            <marquee id="newsup" direction="up" scrollamount="3" height="500vh">
                @foreach (var item in Model.newsModels)
                {<div class="news-margin" onMouseOver="document.getElementById('newsup').stop();" onMouseOut="document.getElementById('newsup').start();">
                        <p style="font-size:10px;color:#2e618c; font-weight:bold;">@item.DateofAction.ToString("dd MMMM yyyy") </p>
                        <a href="@item.NewsLink">  <p style="">  @Html.Raw(item.NewsText) </p></a>
                    </div>

                }
            </marquee>
        </div>
    </div>
</section>




</div>

@section Scripts{
    <script>$(document).ready(function () {


            // Activate Carousel
            $("#myCarousel").carousel();

            // Enable Carousel Indicators
            $(".item1").click(function () {
                $("#myCarousel").carousel(0);
            });
            $(".item2").click(function () {
                $("#myCarousel").carousel(1);
            });
            $(".item3").click(function () {
                $("#myCarousel").carousel(2);
            });

            // Enable Carousel Controls
            $(".carousel-control-prev").click(function () {
                $("#myCarousel").carousel("prev");
            });
            $(".carousel-control-next").click(function () {
                $("#myCarousel").carousel("next");
            });




        });</script>
}

