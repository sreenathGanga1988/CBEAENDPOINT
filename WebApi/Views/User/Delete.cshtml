@model DTO.UserDTO

@{
    ViewData["Title"] = "Edit";
}

    <h2 class="form-heading">Delete User</h2>
<hr />

<form asp-action="Delete">
    <partial name="/Views/Shared/_ErrorBox.cshtml" />



    <div class="row justify-content-center">


        <div class="form-group col-4">
            <label id="lbl_Id" class="control-label">Id</label>
        </div>
        <div class=" col-4">
            <input id="id" v-model="dataModel.id" class="form-control" type="number" required disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="UserName" id="lbl_UserName" class="control-label">User Name</label>
        </div>
        <div class=" col-4">
            <input id="UserName" name="UserName" v-model="dataModel.userName" type="text" required class="form-control" disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="Password" id="lbl_Password" class="control-label">Password</label>
        </div>
        <div class=" col-4">
            <input id="Password" name="Password" v-model="dataModel.abbreviation" type="Password" class="form-control" required disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="UserTypeId" id="lbl_UserTypeId" class="control-label">UserTypeId</label>
        </div>
        <div class=" col-4">
            <input id="UserTypeId" name="UserTypeId" v-model="dataModel.userTypeId" type="text" class="form-control" disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="EmployeeId" id="lbl_EmployeeId" class="control-label">EmployeeId</label>
        </div>
        <div class=" col-4">
            <input id="EmployeeId" name="EmployeeId" v-model="dataModel.employeeId" type="text" class="form-control" disabled />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="form-group form-check col-4">


            <input type="checkbox" id="IsActive" name="IsActive" v-model="dataModel.isActive" disabled>
            <label for="checkbox">Active ??</label>


        </div>

        <div class="form-group form-check col-4">




        </div>
    </div>



    <hr />


    <div class="row justify-content-center">
        <div class=" col-sm-12 text-center">

            <input type="submit" v-on:click="checkForm" value="Delete" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger btn-md center-block"> Cancel </a>
        </div>


    </div>
    <hr />
    <partial name="/Views/Shared/_AuditView.cshtml" />
</form>


<div>
    <a asp-action="Index" class="BacktoList"> &laquo; Back to List</a>
</div>
@section Scripts {
    <script type="text/javascript">

        var pageMixin = {
            created() {
                this.dataModel = @Json.Serialize(Model);
            },
            data: {
                dataModel: null,
                errors: [],
                function() {
                    return {
                        appMessage: 'Category',
                    };
                }
            },
            methods: {
                 checkForm: function (e) {
                    this.errors = [];
                    
                    if (!this.errors.length) {
                        return true;
                    }
                    e.preventDefault();
                }  , 
            }
        };

        mixinArray.push(pageMixin);
    </script>
}
