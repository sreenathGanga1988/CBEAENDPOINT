@model DTO.CircleDTO

@{
    ViewData["Title"] = "Details";
}

    <h2 class="form-heading">Circle Details </h2>
<hr />

<form>
    <partial name="/Views/Shared/_ErrorBox.cshtml" />


    <div class="row justify-content-center">


        <div class="form-group col-4" >
            <label id="lbl_Id" class="control-label">Id</label>
        </div>
        <div class=" col-4" >
            <input id="id" v-model="dataModel.id" class="form-control" type="number" required disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="Name" id="lbl_Name" class="control-label">Circle Name</label>
        </div>
        <div class=" col-4">
            <input id="Name" name="Name" v-model="dataModel.name" type="text" required class="form-control" disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="Abbreviation" id="lbl_Abbreviation" class="control-label">Code</label>
        </div>
        <div class=" col-4">
            <input id="Abbreviation" name="Abbreviation" v-model="dataModel.abbreviation" type="text" class="form-control" disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="CircleCode" id="lbl_CircleCode" class="control-label">Circle Code</label>
        </div>
        <div class=" col-4">
            <input id="CircleCode" name="CircleCode" v-model="dataModel.circleCode" type="number" class="form-control" disabled/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="DateFrom" id="lbl_DateFrom" class="control-label">Date From</label>
        </div>
        <div class=" col-4">
            <input id="DateFrom" name="DateFrom" v-model="moment(dataModel.dateFrom).format('YYYY-MM-DD')" type="date" class="form-control" disabled />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-4">
            <label for="DateTo" id="lbl_DateTo" class="control-label">Date To</label>
        </div>
        <div class=" col-4">
            <input id="DateTo" name="DateTo" v-model="moment(dataModel.dateTo).format('YYYY-MM-DD')" type="date" class="form-control" disabled />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="form-group form-check col-4">


            <input type="checkbox" id="IsActive" name="IsActive" v-model="dataModel.isActive" disabled>
            <label for="checkbox">Active ??</label>


        </div>

        <div class="form-group form-check col-4">





        </div>
    </div>




    <hr />



    <partial name="/Views/Shared/_AuditView.cshtml" />
</form>


<div>
    <a asp-action="Index" class="BacktoList"> &laquo; Back to List</a>
</div>
@section Scripts {
    <script type="text/javascript">

        var pageMixin = {
            created() {
                this.dataModel = @Json.Serialize(Model);
            },
            mounted() {
                GetUserFullNames();
            },
            data: {
                dataModel: null,
                errors: [],
                function() {
                    return {
                        appMessage: 'Category',
                    };
                }
            },
            methods: {

            }
        };

        mixinArray.push(pageMixin);
    </script>
}
