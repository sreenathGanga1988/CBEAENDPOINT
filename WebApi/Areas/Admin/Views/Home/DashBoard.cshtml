                    })
                        .then(function (response) {
                            //handle success


                            let ctx = document.getElementById('myChart2').getContext('2d');
                            


                            var myChart = new Chart(ctx, {
                      type: 'line',
                      data: {
                      labels: response.data.label,
                      datasets: [{
                          label: 'Total Contribution',
                      data:response.data.data,
                      borderWidth: 1
                      }]
