    <script type="text/javascript">

        var pageMixin = {
            created() {


                this.GetData();
                this.GetData2();
                this.GetData3();
            },
            data: {

                errors: [],
                states: [],
                circles: [],
                function() {
                    return {
                        appMessage: 'Category',
                    };
                }
            },
            methods: {



                GetData: function () {

                    axios({
                        method: 'get',
                        url: '/api/dashboard/YEARCONTR',
                         headers: { 'Content-Type': 'multipart/form-data' }
                    })
                        .then(function (response) {
                            //handle success


                            let ctx = document.getElementById('myChart').getContext('2d');
                            


                            var myChart = new Chart(ctx, {
                      type: 'bar',
                      data: {
                      labels: response.data.label,
                      datasets: [{
                      label: 'Total Contribution',
                      data:response.data.data,
                      borderWidth: 1
                      }]
                      },
                      options: {
                      scales: {
                      yAxes: [{
                      ticks: {
                      beginAtZero: true
                      }
                      }]
                      }
                      }
                      });


                        })
                        .catch(function (response) {
                            //handle error
                            console.log(response);
                        });
                },


                GetData2: function () {

                    axios({
                        method: 'get',
                        url: '/api/dashboard/YEARCONTR',
